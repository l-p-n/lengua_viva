<div class="container-lg-bordered box-shadow-basic">
  <div class="row">
    <%= image_tag "articles_cropped.png", alt: "image of newspaper", id: "articles" %>
  </div>

  <div class="row mt-4">
    <div class="d-flex justify-content-around w-100">
      <div style="width:680px;">
        <h2><strong><%= @resource.title %></strong></h1>
        <h4>by <%= @resource.author %></h3>
        <br>
        <%= link_to "Read article", @resource.url %>
        <%= render "shared/interactions" %>
      </div>

      <div class="comments-container ml-4">
        <%= render "shared/comments", resource: @resource %>
        <%= render "shared/new_comment_form", resource: @resource %>
      </div>
    </div>
  </div>
<br>
  <%# <%= link_to "Add a review", resource_reviews_path(@resource) %>

</div>
