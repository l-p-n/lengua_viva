<div class="navbar sticky-top navbar-expand-sm navbar-lenguaviva" id="navBar">
  <div class="container-fluid">
    <%= link_to image_tag("lengua_viva_logo_transparent.png", class: "navbar-logo"), root_path, alt: "Lengua Viva logo" %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item-link active">
            <%= link_to "My Feed", resources_path, class: "nav-link nav-link-feed" %>
          </li>
          <li class="nav-item-link">
            <%= link_to "My Account", my_account_path(current_user), class: "nav-link nav-link-account" %>
          </li>
          <li class="nav-item-link">
            <%= link_to "My Classroom", my_classroom_path(current_user), class: "nav-link nav-link-classroom" %>
          </li>
          <li class="nav-item dropdown">
            <% if current_user.photo.attached? %>
              <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle nav-avatar", crop: :fill, id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% else %>
              <%= image_tag "default_avatar.png", class: "avatar dropdown-toggle nav-avatar", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% end %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Edit Account", edit_user_path(current_user), class: "dropdown-item" %>
              <%= link_to "My Feed", resources_path, class: "dropdown-item" %>
              <div class="dropdown-divider"></div>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item-link">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
