<% if @resource.liked?(current_user) %>

  <%= link_to like_path(@like), method: :delete, class: "like-icon" do %>
    <i class="fa-solid fa-heart"></i>
  <% end %>

<% else %>

  <%= link_to resource_likes_path(@resource), method: :post, class: "like-icon" do %>
    <i class="fa-regular fa-heart"></i>
  <% end %>

<% end %>
