<% if @resource.bookmarked?(current_user) %>

  <%= link_to bookmark_path(@bookmark), method: :delete, class: "bookmark-btn", remote: true do %>
    <i id="bookmark-button" class="fas fa-bookmark bookmark-icon"></i>
  <% end %>

<% else %>

  <%= link_to resource_bookmarks_path(@resource), method: :post, class: "bookmark-btn", remote: true do %>
    <i id="bookmark-button" class="fa-regular fa-bookmark bookmark-icon"></i>
  <% end %>

<% end %>
