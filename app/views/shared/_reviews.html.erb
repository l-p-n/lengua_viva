<% if resource.reviews.count > 0 %>
  <% resource.reviews.each do |review| %>
    <div class="review-container">
      <p>My notes</p>
      <p><%= review.rating %></p>
      <i class="fa-solid fa-star-sharp"></i>
      <%# <i class="fa-light fa-star-sharp"></i> %>
      <p><%= review.content %></p>
    </div>
    <div>
      <% if review.user == current_user %>
        <%= link_to review_path(review),
                                          method: :delete,
                                          class: "del",
                                          remote: true,
                                          data: { confirm: "Are you sure?" } do %>
                                            <i class="fa-solid fa-trash-can"></i>
                                          <% end %>
      <% end %>
    </div>
  <% end %>
<% else %>
  <div class="review-container">
    <p>My notes</p>
    <%= simple_form_for @review, url: resource_reviews_path(resource), class: "inline" do |f| %>
      <%= f.input :rating, label: false, :collection => [1, 2, 3, 4, 5], prompt: "#{current_user.first_name}, del 1 al 5, ¿qué te pareció?" %>
      <%= f.input :content, label: false, required: false, class: "review-text-input", placeholder: "¿Por qué no dejar una nota?" %>
      <%= button_tag :submit, class: "btn btn-info review-button" do %>
        <i class="fa-solid fa-paper-plane"></i>
      <% end %>
   <% end %>
  </div>
<% end %>
