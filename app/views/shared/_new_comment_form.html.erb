  <%= simple_form_for @comment, url: resource_comments_path(resource), class: "inline" do |f| %>
    <div class="d-flex justify-content-start">
      <%= f.input :content, label: false, required: false, class: "comment-text-input", placeholder: "Leave a comment..." %>
      <%= button_tag :submit, class: "btn btn-primary comment-button" do %>
        <i class="fa-solid fa-paper-plane"></i>
      <% end %>

    </div>
  <% end %>
