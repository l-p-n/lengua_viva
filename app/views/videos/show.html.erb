<div class="container">
  <%= render 'shared/resource_title', resource: @resource %>

  <iframe width="560" height="315" src="https://www.youtube.com/embed/<%= @url_id %>"  title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>

  <div class="comments-container box-shadow-basic w-50 round-corners">
    <%= render "shared/comments", resource: @resource %>
    <%= render "shared/new_comment_form", resource: @resource %>
  </div>

</div>
