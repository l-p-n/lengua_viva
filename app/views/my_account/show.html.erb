<div class="container-transp">
  <h1 class="mt-4">My Account</h1>
  <p class="mb-4">See all your bookmarked videos and viewing history here</p>
   <div class="d-flex">
    <div id="my-account-nav" class="w-25 my-account-nav-container">
<%# <i class="fa-solid fa-caret-right"></i> %>
      <ul class="nav flex-column nav-pills" id="pills-tab" role="tablist">

        <li class="nav-item" role="presentation">
          <button class="nav-link active" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">My profile</button>
        </li>

        <li class="nav-item d-flex" role="presentation">
          <button class="nav-link" id="pills-bookmarks-tab" data-bs-toggle="pill" data-bs-target="#pills-bookmarks" type="button" role="tab" aria-controls="pills-bookmarks" aria-selected="true">My bookmarks</button>
        </li>

        <li class="nav-item d-flex" role="presentation">
          <button class="nav-link" id="pills-history-tab" data-bs-toggle="pill" data-bs-target="#pills-history" type="button" role="tab" aria-controls="pills-history" aria-selected="true">History</button>
        </li>

      </ul>
    </div>

    <div class="w-75 mb-5">
      <div class="tab-content" id="pills-tabContent">

        <div class="tab-pane fade show active" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
          <%= render "my_profile" %>
        </div>

        <div class="tab-pane fade" id="pills-bookmarks" role="tabpanel" aria-labelledby="pills-bookmarks-tab">
          <%= render "my_bookmarks" %>
        </div>

        <div class="tab-pane fade" id="pills-history" role="tabpanel" aria-labelledby="pills-history-tab">
          <%= render "my_history" %>
        </div>

      </div>
    </div>
  </div>
</div>
