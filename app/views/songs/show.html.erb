<div class="container-lg-bordered-no-mt">
  <%= render "shared/resource_title", resource: @resource %>
  <br>
  <div class="d-flex justify-content-around w-100">
    <div class="d-flex flex-column align-items-end">

      <p class= "mb-3">Note: You have to be logged into your Spotify account to listen to the full song.</p>

      <iframe src="<%=@resource.url%>" width=100%" height="450" frameborder="0" allowtransparency="true" allow="encrypted-media"></iframe>

      <%= render "shared/interactions" %>
    </div>

    <div class="comments-container box-shadow-basic round-corners ml-4">
      <%= render "shared/comments", resource: @resource %>
      <%= render "shared/new_comment_form", resource: @resource %>
    </div>
  </div>
  <br>
  <br>
  <br>
  <br>
  <br>
</div>
